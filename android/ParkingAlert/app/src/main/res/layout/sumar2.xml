<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/report"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dip"
                android:text="Raportat de:"
                android:textSize="@dimen/txt_size_mic" />

            <TextView
                android:id="@+id/report_name"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dip"
                android:textSize="@dimen/txt_size_mic" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dip"
                android:text="La data:"
                android:textSize="@dimen/txt_size_mic" />

            <TextView
                android:id="@+id/data"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dip"
                android:textSize="@dimen/txt_size_mic" />
        </TableRow>

        <TableRow
            android:id="@+id/tablerow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dip"
                android:text="Raspuns la data:"
                android:textSize="@dimen/txt_size_mic" />

            <TextView
                android:id="@+id/data_raspuns"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dip"
                android:textSize="@dimen/txt_size_mic" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dip"
                android:text="Feedback:"
                android:textSize="@dimen/txt_size_mic" />

            <TextView
                android:id="@+id/feedback"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20dip"
                android:textSize="@dimen/txt_size_mic" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="#5387CB"
        android:gravity="center"
        android:text="Ok"
        android:textColor="@color/alb"
        android:textSize="@dimen/txt_size_mic" />
</RelativeLayout>