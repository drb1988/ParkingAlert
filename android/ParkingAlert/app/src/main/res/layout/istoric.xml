                <!--android:text="Istoric"-->
                <!--android:textColor="@android:color/white"-->
                <!--android:textSize="17dp" />-->
        <!--</RelativeLayout>-->
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">


        <SearchView
            android:id="@+id/searchView_istoric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/blue_white"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:padding="8dp"
            android:paddingBottom="5dp"
            android:singleLine="true"></SearchView>

    </FrameLayout>

    <ListView
        android:id="@+id/listview_istoric"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/blue_white"
        android:dividerHeight="0.5dp"></ListView>
</LinearLayout>