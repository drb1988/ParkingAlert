<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imagine_primarie"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textv_primaria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagine_primarie"
            android:gravity="center"
            android:text="Primaria Municipiului Bucuresti"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/motto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textv_primaria"
            android:gravity="center"
            android:text="Pentru un oras mai curat, pentru o viata mai buna"
            android:textColor="@android:color/black" />

        <RelativeLayout
            android:id="@+id/relative_notifica_proprietarul"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_notifica_proprietarul"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagine_proprietar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/masini_inregistrate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Notifica proprietarul"
                android:textColor="@color/alb"
                android:textSize="22dp" />
        </RelativeLayout>

        <!--<LinearLayout-->
