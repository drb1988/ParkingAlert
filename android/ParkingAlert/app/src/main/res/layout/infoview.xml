<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_linear_unique"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/blue_white"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_info_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/com_facebook_profile_picture_blank_square" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/nr_masina_infoview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Notificat bh12abc"
            android:textSize="@dimen/txt_size_bigger1" />

        <TextView
            android:id="@+id/time_info_view"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nr_masina_infoview"
            android:text="Acum 4 minute"
            android:textSize="@dimen/txt_size" />
    </RelativeLayout>
</LinearLayout>