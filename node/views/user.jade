extends dashboard-layout
block content
  .row
    .col-lg-12
      h1.page-header User
  .row
    .col-lg-12
      .panel.panel-default
        .panel-heading New user

        .panel-body
          .row
            form(role='form' method='post')
              if (message && message.length > 0)
                div.alert(class='#{message_type}') #{message}
              .col-lg-6
                .form-group
                  label Username
                  input.form-control(type='text' name='username' placeholder='Enter username here')
                .form-group
                  label Password
                  input.form-control(type='password' name='password' placeholder='Enter password here')
                button(type='submit') Submit
              // /.col-lg-6
