  block content
  body.sidebar-mini.wysihtml5-supported.skin-blue.sidebar-collapse.fixed
    .wrapper
      header.main-header
        // Logo
        a.logo(href='index2.html')
          // mini logo for sidebar mini 50x50 pixels
          span.logo-mini
            b <i class="fa fa-car" aria-hidden="true" style='margin:12px'></i>
          // logo for regular state and mobile devices
          span.logo-lg
            b Friendly
        // Header Navbar: style can be found in header.less
        nav.navbar.navbar-static-top(style="background-color:#222d32")
          // Sidebar toggle button
          a.sidebar-toggle(href='#', data-toggle='offcanvas', role='button')
            span.sr-only Toggle navigation
          .navbar-custom-menu
            ul.nav.navbar-nav
              li.dropdown.tasks-menu
                ul.dropdown-menu
                  li.header You have 9 tasks
                  li
                    // inner menu: contains the actual data
                    ul.menu
                      li
                        // Task item
                        a(href='#')
                          h3
                            | Design some buttons
                            small.pull-right 20%
                          .progress.xs
                            .progress-bar.progress-bar-aqua(style='width: 20%', role='progressbar', aria-valuenow='20', aria-valuemin='0', aria-valuemax='100')
                              span.sr-only 20% Complete
                      // end task item
                      li
                        // Task item
                        a(href='#')
                          h3
                            | Create a nice theme
                            small.pull-right 40%
                          .progress.xs
                            .progress-bar.progress-bar-green(style='width: 40%', role='progressbar', aria-valuenow='20', aria-valuemin='0', aria-valuemax='100')
                              span.sr-only 40% Complete
                      // end task item
                      li
                        // Task item
                        a(href='#')
                          h3
                            | Some task I need to do
                            small.pull-right 60%
                          .progress.xs
                            .progress-bar.progress-bar-red(style='width: 60%', role='progressbar', aria-valuenow='20', aria-valuemin='0', aria-valuemax='100')
                              span.sr-only 60% Complete
                      // end task item
                      li
                        // Task item
                        a(href='#')
                          h3
                            | Make beautiful transitions
                            small.pull-right 80%
                          .progress.xs
                            .progress-bar.progress-bar-yellow(style='width: 80%', role='progressbar', aria-valuenow='20', aria-valuemin='0', aria-valuemax='100')
                              span.sr-only 80% Complete
                      // end task item
                  li.footer
                    a(href='#') View all tasks
              // User Account: style can be found in dropdown.less
              li.dropdown.user.user-menu
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  img.user-image(src='/dist/img/user3-128x128.jpg', alt='User Image')
                  span.hidden-xs #{user.name}
                ul.dropdown-menu
                  // User image
                  li.user-header
                    img.img-circle(src='/dist/img/user3-128x128.jpg', alt='User Image')
                    p
                      | #{user.name}
                      small Esti logat cu #{user.email}.
                  // Menu Body
                  li.user-footer
                    .pull-left
                      a.btn.btn-default.btn-flat(href='#') Profil
                    .pull-right
                      a.btn.btn-default.btn-flat(href='logout') Iesire
              // Control Sidebar Toggle Button
      // Left side column. contains the logo and sidebar
      aside.main-sidebar
        // sidebar: style can be found in sidebar.less
        section.sidebar
          // Sidebar user panel
          // sidebar menu: : style can be found in sidebar.less
          ul.sidebar-menu
            li.header PRINCIPALELE UNELTE
            li.treeview
              a(href='#')
                i.fa.fa-dashboard
                span Panou de control
                span.pull-right-container
                  i.fa.fa-angle-left.pull-right
              ul.treeview-menu
                li
                  a(href='index.html')
                    i.fa.fa-circle-o
                    |  Optiune 1
                li
                  a(href='index2.html')
                    i.fa.fa-circle-o
                    |  Optiune 2
            li.treeview
              a(href='#')
                i.fa.fa-files-o
                span Alte optiuni
                span.pull-right-container
              ul.treeview-menu
                li
                  a(href='#####')
                    i.fa.fa-circle-o
                    |  Prima optiune
                li
                  a(href='#####')
