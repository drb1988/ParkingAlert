extends dashboard-layout
block content
 .content-wrapper
    // Main content
    .row
      .col-lg-12
        .panel.panel-default
          .panel-heading 
              h1 Setari 
                li.ion.ion-edit 

          .panel-body
            .row
              form(role='form' method='post')
                if (message && message.length > 0)
                  div.alert(class='#{message_type}') #{message}
                .col-lg-6
                  .form-group
                    label Nume
                    input.form-control(type='text' name='last_name' placeholder='Introdu numele aici' value=admin.last_name)
                  .form-group
                    label Prenume
                    input.form-control(type='text' name='first_name' placeholder='Introdu prenumele aici' value=admin.first_name)
                  .form-group
                    label Email
                    input.form-control(type='text' name='email' placeholder='Introdu emailul aici' value=admin.email)
                  button.btn.btn-default(type='submit') Submit
              // /.col-lg-6
